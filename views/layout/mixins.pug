mixin viajesCards(listaViajes)
    .row.proximos-viajes
        //- Esta es la forma de hacer un forEach con pug
        each viaje in listaViajes
            .col-md-6.col-lg-4.mb-4
                .card.rounded.shadow
                    img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`, alt="")
                    .card-body
                        h2= viaje.titulo
                        p 
                            svg.icon.icon-tabler.icon-tabler-calendar-event.mr-2(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                rect(x='4' y='5' width='16' height='16' rx='2')
                                line(x1='16' y1='3' x2='16' y2='7')
                                line(x1='8' y1='3' x2='8' y2='7')
                                line(x1='4' y1='11' x2='20' y2='11')
                                rect(x='8' y='15' width='2' height='2')
                            | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                        
                        p 
                            svg.icon.icon-tabler.icon-tabler-user.mr-1(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                circle(cx='12' cy='7' r='4')
                                path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')

                            | #{viaje.disponibles} Disponibles

                        p= viaje.descripcion.substring(0, 150).concat("...")

                        a.btn.btn-success.btn-block(href=`/viajes/${viaje.slug}`) Ver m√°s


mixin testimonialesCards(listaTestimoniales)
    .row.testimoniales
        each testimonio in listaTestimoniales
            .col-md-6.col-lg-4.mb-4
                .card.rounded.shadow
                    .card-body 
                        blockquote.blockquote
                            p.mb-0 #{testimonio.mensaje} 
                            footer.blockquote-footer #{testimonio.nombre}
